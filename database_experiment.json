{
  "version": "1.0.0",
  "title": "Break Database Connection for Node.js App",
  "description": "An experiment to break the database connection for a Node.js application by stopping the RDS database instance.",
  "tags": [
    "database",
    "aws",
    "chaos"
  ],
  "steady-state-hypothesis": {
    "title": "Database Connection is Healthy",
    "probes": [
      {
        "type": "probe",
        "name": "check_database_connection",
        "tolerance": 200,
        "provider": {
          "type": "python",
          "module": "chaosaws.rds.probes",
          "func": "describe_db_instances",
          "arguments": {
            "db_instance_identifiers": [
              "database-1-instance-1"
            ],
            "region": "eu-west-1"
          }
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stop_database",
      "provider": {
        "type": "python",
        "module": "chaosaws.rds.actions",
        "func": "stop_db_instance",
        "arguments": {
          "db_instance_identifier": "database-1-instance-1",
          "region": "eu-west-1"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "start_database",
      "provider": {
        "type": "python",
        "module": "chaosaws.rds.actions",
        "func": "start_db_instance",
        "arguments": {
          "db_instance_identifier": "database-1-instance-1",
          "region": "eu-west-1"
        }
      }
    }
  ]
}