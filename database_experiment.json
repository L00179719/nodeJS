{
  "version": "1.0.0",
  "title": "Database Connectivity Test for Node.js App",
  "description": "An experiment to check the connectivity of a Node.js app to a MariaDB database.",
  "steady-state-hypothesis": {
    "title": "Database connection is successful",
    "probes": [
      {
        "type": "probe",
        "name": "check_database_connection",
        "tolerance": {
          "type": "jsonpath",
          "path": "$.status",
          "expect": "connected"
        },
        "provider": {
          "type": "python",
          "module": "chaosaws.rds.probes",
          "func": "describe_db_instances",
          "arguments": {
            "db_instance_identifier": "mydbinstance", // Update with your DB instance identifier
            "region": "eu-west-1"
          }
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "simulate_database_failure",
      "provider": {
        "type": "python",
        "module": "chaosaws.rds.actions",
        "func": "stop_db_instance",
        "arguments": {
          "db_instance_identifier": "mydbinstance", // Update with your DB instance identifier
          "region": "eu-west-1"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "restore_database",
      "provider": {
        "type": "python",
        "module": "chaosaws.rds.actions",
        "func": "start_db_instance",
        "arguments": {
          "db_instance_identifier": "mydbinstance", // Update with your DB instance identifier
          "region": "eu-west-1"
        }
      }
    }
  ]
}