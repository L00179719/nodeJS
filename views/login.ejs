<!--Import header-->
<%- include('includes/header.ejs') %>






    <div class="login-page-form text-center">

        <form action="/login" method="post">
            <div class="mb-5 alert-success" role="alert">

                <!--login successful-->
                <%-alertSuccess%>

            </div>
            <div class="mb-5 alert-danger" role="alert">

                <!--invalid password -->
                <%-alertPassword%>

            </div>
            <div class="mb-5 alert-danger" role="alert">

                <%-alertBook%>

            </div>
            <i class="mb-4 fas fa-user"></i>
            <h3 class="mb-3 font-weight-normal">Login Here</h3>
            <input type="text" id="username" name="username" class="input mt-3 form-control" placeholder="username"
                required autofocus>
            <input type="password" id="password" name="password" class="mt-3 form-control" placeholder="password"
                required autofocus>


            <p class="mt-3 form-register">Don't have an account<a class="register" href="register"> Register here</a>
            </p>


            <div class="mt-5">
                <button id="submitbutton" class="btn btn-lg">Sign In</button>

            </div>

        </form>
    </div>
    <!--Import footer-->
    <%- include('includes/footer.ejs') %>